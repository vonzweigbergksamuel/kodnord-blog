---

<div
  class={`flex w-full h-full flex-col items-center justify-center bg-background rounded-md z-0`}
>
  <div
    class="relative flex w-full flex-1 scale-y-120 items-center justify-center isolate z-0"
  >
    <!-- Left side flicker beam -->
    <div
      style="
        width: clamp(10rem, 30vw, 30rem);
        height: clamp(6rem, 14vw, 14rem);
        background-image: conic-gradient(var(--conic-position), var(--tw-gradient-stops));
      "
      class="absolute inset-auto right-1/2 overflow-visible bg-gradient-conic from-purple-400 via-transparent to-transparent text-white [--conic-position:from_70deg_at_center_top] animate-flicker"
    >
      <div
        class="absolute w-full left-0 bg-transparent h-40 bottom-0 z-20 [mask-image:linear-gradient(to_top,white,transparent)]"
      >
      </div>
      <div
        class="absolute w-40 h-full left-0 bg-transparent bottom-0 z-20 [mask-image:linear-gradient(to_right,white,transparent)]"
      >
      </div>
    </div>

    <!-- Right side flicker beam -->
    <div
      style="
        width: clamp(10rem, 30vw, 30rem);
        height: clamp(6rem, 14vw, 14rem);
        background-image: conic-gradient(var(--conic-position), var(--tw-gradient-stops));
      "
      class="absolute inset-auto left-1/2 bg-gradient-conic from-transparent via-transparent to-purple-400 text-white [--conic-position:from_290deg_at_center_top] animate-flicker"
    >
      <div
        class="absolute w-40 h-full right-0 bg-transparent bottom-0 z-20 [mask-image:linear-gradient(to_left,white,transparent)]"
      >
      </div>
      <div
        class="absolute w-full right-0 bg-transparent h-40 bottom-0 z-20 [mask-image:linear-gradient(to_top,white,transparent)]"
      >
      </div>
    </div>

    <!-- Shadow beam -->
    <div
      class="absolute top-1/2 translate-y-12 scale-x-150 w-full h-[12rem] bg-transparent blur-2xl"
    >
    </div>

    <!-- Blurred overlay -->
    <div
      class="absolute top-1/2 z-50 h-[12rem] w-full bg-transparent opacity-10 backdrop-blur-md"
    >
    </div>

    <!-- Light glow -->
    <div
      style="
        width: clamp(8rem, 36vw, 28rem);
        height: clamp(5rem, 9vw, 9rem);
      "
      class="absolute inset-auto z-50 -translate-y-1/2 rounded-full bg-purple-400 opacity-50 blur-3xl animate-flicker"
    >
    </div>

    <!-- Core glow -->
    <div
      style="
        width: clamp(6rem, 26vw, 16rem);
        height: clamp(5rem, 9vw, 9rem);
      "
      class="absolute inset-auto z-30 -translate-y-[6rem] rounded-full bg-purple-400 blur-2xl animate-flicker"
    >
    </div>

    <!-- Center line -->
    <div
      style="width: clamp(10rem, 40vw, 30rem);"
      class="absolute inset-auto z-50 h-0.5 -translate-y-[7rem] bg-purple-400"
    >
    </div>

    <!-- Mask at top of lamp -->
    <div
      class="absolute inset-auto z-40 h-44 w-full -translate-y-[12.5rem] bg-background"
    >
    </div>

    <!-- Children content -->
    <div
      class="relative z-50 flex -translate-y-[1.5rem] sm:translate-y-[1rem] md:translate-y-[3rem] lg:translate-y-[5rem]"
    >
      <h1
        id="hover-title"
        class="font-jetbrains font-extrabold tracking-tighter text-white text-center relative uppercase"
        style="font-size: clamp(3rem, 16vw, 12rem);"
      >
        Portfolio
      </h1>
      <h1
        id="hover-reflection"
        class="absolute top-1/2 left-1/2 font-jetbrains font-extrabold tracking-tighter text-purple-400 pointer-events-none opacity-40 select-none animate-flicker uppercase"
        style="
          font-size: clamp(3rem, 16vw, 12rem);
          transform: translateX(-50%) scaleY(-1);
          text-shadow: 0 2px 10px rgba(168, 85, 247, 0.3);
          mask-image: linear-gradient(to top, rgba(0,0,0,0.4), transparent);
          -webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0.4), transparent);
          will-change: transform, opacity;
        "
      >
        Portfolio
      </h1>
      <!-- <p
        class="absolute right-25 top-10 translate-x-1/2 text-purple-400 font-jetbrains font-bold text-sm"
      >
        Samuel von Zweigbergk
      </p> -->
    </div>
  </div>
</div>
