---
import { LampContainer } from "./ui/lamp";
---

<div
  class="absolute -top-1/6 w-full h-full flex flex-col justify-center items-center overflow-hidden"
>
  <LampContainer client:only="react">
    <h1
      class="font-jetbrains font-bold tracking-tighter text-white text-center"
      style="font-size: clamp(3rem, 16vw, 12rem);"
    >
      PORTFOLIO
    </h1>

    <h1
      class="absolute top-1/2 left-1/2 font-jetbrains font-bold tracking-tighter text-purple-500 pointer-events-none opacity-30 select-none animate-flicker"
      style="
        font-size: clamp(3rem, 16vw, 12rem);
        transform: translateX(-50%) scaleY(-1) skewX(-10deg);
        text-shadow: 0 2px 10px rgba(168, 85, 247, 0.3);
        mask-image: linear-gradient(to bottom, rgba(0,0,0,0.4), transparent);
        -webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,0.4), transparent);
        will-change: transform, opacity;
      "
    >
      PORTFOLIO
    </h1>
  </LampContainer>
</div>
